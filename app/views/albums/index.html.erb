<h1>Albums</h1>

<div class="table-responsive">
  <table class="table table-hover">

    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= album.title %></td>
          <td><%= album.artist %></td>
          <td>
            <%= link_to 'Show', album %> |
            <%= link_to 'Edit', edit_album_path(album) %> |
            <%= link_to 'Destroy', album, data: { turbo_method: :delete } %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<p>
  <%= link_to 'New Album', new_album_path %>
</p>
